@model IEnumerable<BuiChiCuong.Context.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    <link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />
}

@section footer{
    <script src="~/Content/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#prtable').DataTable();
        });
    </script>
}

    <h2 style="color: red ">Quản lý sản phẩm</h2>

    <p>
        @Html.ActionLink("Tạo mới", "Create")
    </p>
        @using (Html.BeginForm("Index", "Product", FormMethod.Get))
{

}

    <table class="table" id="prtable">
        <thead>
            <tr>
                <th>
                    Tên Danh Mục
                </th>
                <th>
                    Tên Sản Phẩm
                </th>
                <th width="30%">
                    Hình Ảnh
                </th>
                <th>
                    Mô Tả Ngắn
                </th>
                <th>
                    Mô Tả Chi Tiết
                </th>
                <th>
                    Giá Bán
                </th>
                <th>
                    Giá Bán KM
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deleted)
                </th>
                <th>
                   Trạng Thái
                </th>
                <th>
                    Ngày Tạo
                </th>
                <th>
                    Type Id
                </th>
                <th>Chức Năng</th>
            </tr>
        </thead>
     
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src="~/Content/images/items/@Html.DisplayFor(Item => item.Avatar)" width="30%">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortDes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceDiscount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deleted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOnUtc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeId)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
